<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CRM Group Suite">

<listeners>
<listener class-name="com.crm.vtiger.listeners.ExtentReportListener"></listener>
</listeners>
<!--smoke tests-->

  <test name="SmokeTest">
     <parameter name="os" value="Windows"></parameter>
  	<parameter name="browser" value="firefox"></parameter>
  <groups>
  	<run>
  		<include name ="smoke"></include>
  	</run>
  
  </groups>

    <classes>
      <class name="com.crm.vtiger.products.ProductFlowTest"/>
      <class name="com.crm.vtiger.Org.OrgFlowTest"/>
    </classes>
  </test>
  
  <!-- Regression tests -->
  
    <test name="RegressionTest">
     <parameter name="os" value="Windows"></parameter>
  	<parameter name="browser" value="firefox"></parameter>
  <groups>
  	<run>
  		<include name ="regression"></include>
  	</run>
  
  </groups>

    <classes>
      <class name="com.crm.vtiger.products.ProductFlowTest"/>
      <class name="com.crm.vtiger.Org.OrgFlowTest"/>
    </classes>
  </test>
  <!-- Sanity -->
  
    <test name="sanityTest">
     <parameter name="os" value="Windows"></parameter>
  	<parameter name="browser" value="firefox"></parameter>
  <groups>
  	<run>
  		<include name ="sanity"></include>
  	</run>
  
  </groups>

    <classes>
      <class name="com.crm.vtiger.products.ProductFlowTest"/>
      <class name="com.crm.vtiger.Org.OrgFlowTest"/>
    </classes>
  </test>
</suite>
