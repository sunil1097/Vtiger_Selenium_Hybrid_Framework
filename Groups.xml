<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CRM Group Suite">

  <listeners>
    <listener class-name="com.crm.vtiger.listeners.ExtentReportListener"/>
  </listeners>

  <!-- Smoke tests -->
  <test name="SmokeTest">
    <parameter name="os" value="Windows"/>
    <parameter name="browser" value="chrome"/>
    <groups>
      <run>
        <include name="smoke"/>
      </run>
    </groups>
    <classes>
      <class name="com.crm.vtiger.products.ProductFlowTest"/>
      <class name="com.crm.vtiger.Org.OrgFlowTest"/>
    </classes>
  </test>

